{%extends "layout.njk"%}

{% block head %}
    <title>Receita - {{recipe.title}}</title>
{% endblock %}

{% block container %}
    <div id="main-container">

        {% block header %}
            {%include "home-pages/parts/header.njk"%}
        {% endblock %}

        {% block content %}

            <div class="recipe-information">
                <div class="gallery">

                    <div class="highlight">
                        <img 
                            src="{{recipeImages[0].src}}" 
                            alt="{{recipeImage[0].name}}"
                            onclick="Lightbox.open()"
                        >

                        <div class="lightbox-target">
                            <img src="{{recipeImages[0].src}}" alt="{{ recipeImages[0].name }}">
                            <a 
                                class="lightbox-close" 
                                href="#"
                                onclick="Lightbox.close()"
                            >
                                <i class="material-icons">close</i>
                            </a>
                        </div>
                    </div>
                    

                    <div class="preview-container">

                        <div class="gallery-preview">
                            {% for image in recipeImages %}
                                <img 
                                    src="{{ image.src }}" 
                                    alt="{{ image.name }}"
                                    {% if  loop.index0 == 0 %}
                                        class="active"
                                    {% endif %}
                                    onclick="ImageGallery.setImage(event)"
                                >
                            {% endfor %}
                        </div>
                        
                    </div>
                </div>

                <div class="recipe-name">
                    <h2>{{recipe.title}}</h2>
                </div>

                <div class="recipe-creator">
                    <span>por {{recipe.chef_name}}</span>
                </div>

                <div class="ingredients">
                    <div class="title-button-information">
                        <h3>Informações adicionais</h3>
                        <span class="button1">ESCONDER</span>
                    </div>

                    <ul class="ingredient">
                        {% for ingredient in recipe.ingredients %}
                            <li ><span>{{ingredient}}</span></li>
                        {%endfor%}
                    </ul>
                </div>

                <div class="preparation">
                    <div class="title-button-information">
                        <h3>Modo de preparo</h3>
                        <span class="button2">MOSTRAR</span>
                    </div>

                    <ul class="remove">
                        {% for preparation in recipe.preparation %}
                            <li><span>{{preparation}}</span></li>
                        {%endfor%}
                    </ul>
                </div>

                <div class="additional-information">
                    <div class="title-button-information">
                        <h3>Informações adicionais</h3>
                        <span class="button3">ESCONDER</span>
                    </div>

                    <div class="text">
                        <p>{{recipe.information}}</p>
                    </div>
                </div>
            </div>
        {% endblock %}
    </div>
{% endblock %}

{% block footer %}
    {%include "home-pages/parts/footer.njk"%}
{% endblock %}