{%extends "layout.njk"%}

{% block head %}
    <title>chefs - Foodfy</title>
{% endblock %}

{% block container %}

    {% block header %}

        {% include "admin/parts/header.njk" %}

    {% endblock %}

    <div id="main-container">

        {% block content %}

            <section class="chefs-listing index">

                <div class="title-button index">
                    {% if adminUser === true %}
                        <h2 class="title-admin" style="margin-bottom: 0" >Gerenciar chefs</h2>
                    {%else%}
                        <h2 style="margin-bottom: 0 ">Chefs</h2>
                    {%endif%}
                    {% if adminUser === true %}
                        <a href="/admin/chefs/create"><button class="button" > Criar Chef </button></a>
                    {%endif%}
                </div>

                <div class="chefs">

                    {% for chef in chefs %}
                        <div class="chef" id="{{chef.id}}">
                                {% for image in chefsAvatar %}
                                    {% if image.id == chef.file_id%}
                                        <img src="{{image.src}}" alt="Foto do chef {{chef.name}}">
                                    {% endif %}
                                {% endfor %}

                            <div class="info">
                                <h3 class="name">{{chef.name}}</h3>
                                <span>
                                    {% if adminUser === true %}
                                        <a href="/admin/chefs/details/{{ chef.id }}">Visualizar</a>
                                    {%endif%}
                                </span>
                            </div>
                        </div>
                    {% endfor %}

                </div>

                </div>
            </section>


        {% endblock %}
    </div>

{%endblock container%}