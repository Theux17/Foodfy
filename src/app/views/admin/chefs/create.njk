{%extends "layout.njk"%}

{% block head %}
    <title>Chef - Foodfy</title>
{% endblock %}

{% block container %}

    {% block header %}

        {% include "admin/parts/header.njk" %}

    {% endblock %}

    {% if error %}
        {% include "admin/parts/messages.njk"%}
    {% endif %}
    <div id="main-container">

        {% block content %}

            <section class="create-chef">
                
                <form class="chef-form" method="POST" action="/admin/chefs" enctype="multipart/form-data">
                    <div class="title-button">
                        <h2>Criando chef</h2>
                        <button class="button" onclick="Validate.allFieldsChefs(event)">Salvar chef</button>
                    </div>

                    <span>Nome</span>

                    <input 
                        type="text" 
                        name="name" 
                        value= "{{ chef.name }}" 
                    >
                
                    <span>Avatar</span>
                
                    <div id="avatar-upload">

                        <input 
                            id="avatar-input"
                            name="avatar"
                            multiple 
                            type="file"
                            accept="image/*"
                            onchange="PhotosUpload.handleFileInput(event)"
                        >

                        <span class="button"> Enviar Avatar</span>
                    </div>
                    
                </form>

            </section>
            
        {% endblock %}

    </div>
{% endblock container%}
