<div class="fields-container">

    <div class="item">
        <h4>Nome</h4>
        <input 
            type="text" 
            name="name" 
            placeholder="Digite o nome completo"
            value="{{ user.name }}"
        >            
    </div>

    <div class="item">
        <h4>Email</h4>
        <input 
            type="email" 
            name="email" 
            placeholder="Digite o email"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
        >            
    </div>
    <div class="item password">
        <h4>Senha</h4>
        <input 
            type="password" 
            name="password" 
            placeholder="Digite a senha"
        >            
    </div>

</div>