{%extends "layout.njk"%}

{% block head %}
    <title>chefs - Foodfy</title>
{% endblock %}

{% block container %}

    {% block header %}

        {% include "recipesAdmin/parts/header.njk" %}

    {% endblock %}

    <div id="main-container">

        {% block content %}

            <section class="chefs-listing index">

                <h2>Gerenciar chefs</h2>

                <div class="chefs" id="{{loop.index0}}">

                    {% for chef in chefs %}
                        <div class="chef">
                            <img src="{{chef.avatar_url}}" alt="Foto do chef {{chef.name}}">

                            <div class="info">
                                <h3 class="name">{{chef.name}}</h3>
                                <span>
                                    <a href="/chefs/details/{{ chef.id }}">Visualizar</a>
                                </span>
                            </div>
                        </div>
                    {% endfor %}

                </div>

                </div>
            </section>


        {% endblock %}
    </div>

{%endblock container%}