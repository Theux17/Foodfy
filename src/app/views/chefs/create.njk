{%extends "layout.njk"%}

{% block head %}
    <title>Chef - Foodfy</title>
{% endblock %}

{% block container %}

    {% block header %}

        {% include "recipesAdmin/parts/header.njk" %}

    {% endblock %}

    <div id="main-container">

        {% block content %}

            <section class="create-chef">
                <form class="chef-form" method="POST" action="/chefs">
                    <div class="title-button">
                        <h2>Criando chef</h2>
                        <button class="button" type="submit">Salvar chef</button>
                    </div>
                    <span>Nome</span>
                    <input type="text" name="name" value= "{{ name }}" >
                    <span>Avatar</span>
                    <input type="text" name="avatar_url" value= "{{ avatar_url }}" >
                </form>

            </section>
            
        {% endblock %}

    </div>
{% endblock container%}