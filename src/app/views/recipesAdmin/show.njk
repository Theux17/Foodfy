{%extends "layout.njk"%}

{% block head %}
    <title>Receita - {{recipes.title}}</title>
{% endblock %}

{% block header %}

  <div class="container-header">
    
    <header class="header-admin">
        <div class="logo">
            <a href="/"><img src="/images/logo-admin.png " alt="Logo"></a>
        </div>
            <ul class="menu">
                <li><a href="/admin/recipes">Receitas</a></li>
                <li><a href="/chefs">Chefs</a></li>
            
            </ul>
    </header>

</div>

    
{% endblock %}

{% block content %}

    <div class="recipe-show">
        <div class="title-button">
            <h2>Receita: {{recipe.title}}</h2>
            <a class="edit-button" href="/admin/recipes/{{ recipe.id }}/edit">Editar receita</a>
        </div>

        <img src="{{recipe.image}}" alt="{{recipe.title}}">

        <div class="recipe__name">
            <h2>{{recipe.title}}</h2>
        </div>

        <div class="recipe__creator">
            <p>por {{recipe.chef_name}}</p>
        </div>

        <div class="ingredients">
            <div class="title__ingredients">
                <h3>Ingredientes</h3>
            </div>

            <ul>
                {% for ingredient in recipe.ingredients %}
                    <li>- {{ ingredient }}</li>
                {%endfor%}
                </ul>
            </div>

            <div class="preparation">
                <div class="title__preparation">
                    <h3>Modo de preparo</h3>
                </div>

                <ul>
                    {% for preparation in recipe.preparation %}
                        <li>- {{preparation}}</li>
                        {%endfor%}
                    </ul>

                </div>

                <div class="additional-information">
                    <div class="title__information">
                        <h3>Informações adicionais</h3>
                    </div>

                    <div class="text">
                        <p>{{recipe.information}}</p>
                    </div>
                </div>

            </div>
        {% endblock %}