{%extends "layout.njk"%}

{% block head %}
    <title>Home</title>
{% endblock %}


{% block header %}
    <header class="main">

        <nav>
            <a href="/"><img src="/images/logo.png " alt="Logo"></a>

            <div class="links">
                <a class="link" href="/about" target="blank">Sobre</a>
                <a class="link" href="/revenues" target="blank">Receitas</a>
            </div>
        </nav>

    </header>

{% endblock %}

{% block content %}

    <div class="short-presentation">
        <h1>As melhores receitas</h1>
        <img src="images/chef.png" alt="Chef">
        <p>Aprenda a construir os melhores pratos
            com receitas criadas por profissionais
            do mundo inteiro.
        </p>
    </div>

    <main>
        <h2>Mais acessadas</h2>

        <section class="revenue">
        {% for recipe in recipes %}
            <div class="recipe" id="{{loop.index0}}">
                <img src="{{recipe.image}}" alt="{{recipe.title}}">

                <div class="recipe__name">
                    <p>{{recipe.title}}</p>
                </div>

                <div class="recipe__creator">
                    <p>{{recipe.author}}</p>
                </div>

            </div>
        {% endfor %}
        </section>


    </main>

{% endblock  %}

{% block footer %}
    <footer>
        <p>Todos direitos reservados, receitas Foodfy.</p>
    </footer>
    <script src="/script.js"></script>
{% endblock %}

