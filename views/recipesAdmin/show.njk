{%extends "layout.njk"%}

{% block head %}
    <title>Receita - {{recipes.title}}</title>
{% endblock %}

{% block header %}

  <div class="container-header">
    
    <header class="header-admin">
       <div class="logo">
            <a href="/"><img src="/images/logo-admin.png " alt="Logo"></a>
        </div>
    </header>

</div>

    
{% endblock %}

{% block content %}

    <div class="recipe-show">
        <div class="title-button">
            <h2>Receita: {{recipes.title}}</h2>
            <a class="edit-button" href="/admin/recipes/{{ recipes.index }}/edit">Editar receita</a>
        </div>

        <img src="{{recipes.img_recipe}}" alt="{{recipes.title}}">

        <div class="recipe__name">
            <h2>{{recipes.title}}</h2>
        </div>

        <div class="recipe__creator">
            <p>por {{recipes.author}}</p>
        </div>

        <div class="ingredients">
            <div class="title__ingredients">
                <h3>Ingredientes</h3>
            </div>

            <ul>
                {% for ingredient in recipes.ingredients %}
                    <li>- {{ ingredient }}</li>
                {%endfor%}
                </ul>
            </div>

            <div class="preparation">
                <div class="title__preparation">
                    <h3>Modo de preparo</h3>
                </div>

                <ul>
                    {% for preparation in recipes.preparations %}
                        <li>- {{preparation}}</li>
                        {%endfor%}
                    </ul>

                </div>

                <div class="additional-information">
                    <div class="title__information">
                        <h3>Informações adicionais</h3>
                    </div>

                    <div class="text">
                        <p>{{recipes.information}}</p>
                    </div>
                </div>

            </div>
        {% endblock %}